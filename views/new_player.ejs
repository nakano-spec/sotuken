<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>新規登録</title>
    <style>
        p{
            text-align: center;
        }
        #a{
            font-size: 48px;
        }
        body{
	        background-color:#EEFFFF;
          background-size: cover;
        }
        .row{
          text-align: center;
        }
    </style>
</head>
<body>
  <script src="/socket.io/socket.io.js"></script>
    <p id="a">新規登録</p><br>

    <div class="row">
        <form name = "myform" class="col s12" action="/new_player">
          <div class="row">
            <div class="input-field col s6">
              <label for="first_name">ユーザー名</label>
              <input id="first_name" type="text" name="name" class="validate" minlength="2" maxlength="10" placeholder="半角英数字２～１０文字"
              value="" size="20" style="font-size: 50px;">
            </div>
          </div>
        <div class="row">
            <div class="input-field col s12">
              <label for="password">パスワード</label>
              <input id="password" type="password" name="password1" class="validate" minlength="8" maxlength="16" placeholder="半角英数字８～１６文字"
              value="" size="20" style="font-size: 50px;">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <label for="password">　確　認　</label>
              <input id="password" type="password" name="password2"class="validate" minlength="8" maxlength="16" placeholder="もう一度入力"
              value="" size="20" style="font-size: 50px;">
            </div>
          </div>

          <div class = "s">
            <br>
            <input type="submit" name="button" value="登録" class="s"></button>
            
          </div>

    </form>
    <br>

      
    </div>
    <script>
      var socket = io();
      var f = document.forms.myform;
      var flug = 0;


      f.button.addEventListener('click', function(e) {
      e.preventDefault();
      socket.emit('new_btnclick', f.name.value,f.password1.value,f.password2.value);
    })
    socket.on('new_flug',function(flug){
      if(flug == 1) {
        window.location.href = '/login';
      }
      })     
    </script>
</body>
</html>